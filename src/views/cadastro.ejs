  <body class="bg-light-pink">
    <%- include("./partials/header") %>
    <main class="cadastro-container">
        <section class="container">
      <form class="cadastro" action="/cadastro" method="POST">
        <div class="loading">...</div>
        <h1>Cadastro</h1>

        <div class="input-wrapper">
          <label for="nome">Nome</label>
          <input type="text" name="nome" id="nome" />
        </div>

        <div class="input-wrapper">
          <label for="tel">Telefone</label>
          <input type="text" name="tel" id="tel" />
        </div>

        <div class="input-wrapper">
          <label for="email">Email</label>
          <input type="email" name="email" id="email" />
        </div>

        <div class="input-wrapper">
          <label for="cep"> Cep</label>
          <input type="number" id="Cep" required="" />
        </div>

        <div class="input-wrapper">
          <label for="departments">Estado</label>
          <input type="departments" id="departments" required="" />
        </div>

        <div class="input-wrapper">
          <label for="Cidade"> Cidade</label>
          <input type="text" id="Cidade" required="" />
        </div>

        <div class="input-wrapper">
          <label for="Bairro"> Bairro</label>
          <input type="text" id="Bairro" required="" />
        </div>

        <div class="input-wrapper">
          <label for="Rua"> Rua</label>
          <input type="text" id="Rua" required="" />
        </div>
        <div class="input-wrapper">
          <label for="Numero"> Numero</label>
          <input type="number" id="Numero" required="" />
        </div>

        <div class="input-wrapper">
          <label for="senha">Senha</label>
          <input
            type="password"
            id="senha"
            placeholder="Digite sua senha"
            required=""
          />
        </div>

        <button type="submit">Cadastre-se</button>
      </form>

      <div class="imagem">
          <img class="finn" src="../public/img/finn.png" alt="" />
        <img class="cupcake" src="../public/img/cupcake.png" alt="" />
      </div>
    </section>
    </main>
    <%- include("./partials/footer") %>
  </body>
